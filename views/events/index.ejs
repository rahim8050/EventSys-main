<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%- include('../partials/breadcrumbs') %>
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold">Events</h2>
            <a href="/events/create" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                <i class="fas fa-plus-circle mr-2"></i> Create Event
            </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        <img src="<%= event.image || '/images/default-event.jpg' %>" alt="<%= event.title %>" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-semibold mb-2">
                                <%= event.title %>
                            </h3>
                            <p class="text-gray-600 mb-2"><i class="far fa-calendar-alt mr-2"></i>
                                <%= event.date.toLocaleDateString() %>
                            </p>
                            <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i>
                                <%= event.location %>
                            </p>
                            <a href="/events/<%= event._id %>" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block mt-2">
                            View Details
                        </a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="col-span-3 text-center text-gray-600">No events found.</p>
                            <% } %>
        </div>
</div>