<div class="relative">
    <!-- Hero Section with Background Video -->
    <div class="relative h-screen flex items-center justify-center overflow-hidden">
        <video autoplay loop muted class="absolute z-10 w-auto min-w-full min-h-full max-w-none">
            <source src="../public/video/hero.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <div class="z-20 text-white text-center">
            <h1 class="text-5xl font-bold mb-4">Welcome to EventSys</h1>
            <p class="text-xl mb-8">Discover and create amazing events in your area</p>
            <a href="/events" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-full text-lg transition duration-300">
                Explore Events
            </a>
        </div>
    </div>

    <!-- Rest of the content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Featured Events Section -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold mb-8">Featured Events</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% events.slice(0, 3).forEach(event => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition duration-300 transform hover:-translate-y-1 hover:shadow-xl">
                        <img src="<%= event.image || '/images/default-event.jpg' %>" alt="<%= event.title %>" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2">
                                <%= event.title %>
                            </h3>
                            <p class="text-gray-600 mb-4">
                                <%= event.description.substring(0, 100) %>...</p>
                            <a href="/events/<%= event._id %>" class="text-blue-500 hover:text-blue-600 font-semibold">Learn More</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold mb-8">Explore Categories</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <a href="/events?category=Music" class="bg-blue-100 hover:bg-blue-200 text-blue-800 font-semibold py-4 px-6 rounded-lg text-center transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                    <i class="fas fa-music text-3xl mb-2"></i>
                    <div>Music</div>
                </a>
                <a href="/events?category=Sports" class="bg-green-100 hover:bg-green-200 text-green-800 font-semibold py-4 px-6 rounded-lg text-center transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                    <i class="fas fa-running text-3xl mb-2"></i>
                    <div>Sports</div>
                </a>
                <a href="/events?category=Technology" class="bg-purple-100 hover:bg-purple-200 text-purple-800 font-semibold py-4 px-6 rounded-lg text-center transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                    <i class="fas fa-laptop-code text-3xl mb-2"></i>
                    <div>Technology</div>
                </a>
                <a href="/events?category=Art" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-800 font-semibold py-4 px-6 rounded-lg text-center transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                    <i class="fas fa-palette text-3xl mb-2"></i>
                    <div>Art</div>
                </a>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold mb-8">What Our Users Say</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <p class="text-gray-600 mb-4">"EventSys made organizing my conference a breeze!"</p>
                    <p class="font-semibold">- John Doe, Tech Conference Organizer</p>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <p class="text-gray-600 mb-4">"I've discovered so many great events in my area thanks to EventSys."</p>
                    <p class="font-semibold">- Jane Smith, Event Enthusiast</p>
                </div>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <p class="text-gray-600 mb-4">"The RSVP feature has helped me manage attendees effortlessly."</p>
                    <p class="font-semibold">- Mike Johnson, Local Meetup Organizer</p>
                </div>
            </div>
        </section>

        <!-- Contact Form Section -->
        <section class="mb-16" id="contact">
            <h2 class="text-3xl font-bold mb-8">Contact Us</h2>
            <div class="bg-white rounded-lg shadow-md p-6">
                <form action="/contact" method="POST" class="max-w-lg mx-auto">
                    <div class="mb-4">
                        <label for="name" class="block text-gray-700 font-bold mb-2">Name</label>
                        <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div class="mb-4">
                        <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
                        <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div class="mb-4">
                        <label for="message" class="block text-gray-700 font-bold mb-2">Message</label>
                        <textarea id="message" name="message" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" rows="4"></textarea>
                    </div>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300">
                        <i class="fas fa-paper-plane mr-2"></i>Send Message
                    </button>
                </form>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="bg-blue-600 text-white rounded-lg p-12 text-center">
            <h2 class="text-3xl font-bold mb-4">Ready to Create Your Own Event?</h2>
            <p class="text-xl mb-8">Join EventSys today and start connecting with your community!</p>
            <a href="/auth/register" class="bg-white text-blue-600 hover:bg-blue-100 font-bold py-3 px-8 rounded-full text-lg transition duration-300">
                Get Started
            </a>
        </section>
    </div>
</div>